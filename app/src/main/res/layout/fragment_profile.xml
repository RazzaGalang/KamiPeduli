<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".view.Main.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/akunTitle"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="@dimen/screen_margin"
            android:paddingVertical="@dimen/large_margin"
            android:text="Akun"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white"
            android:layout_marginHorizontal="@dimen/screen_margin"
            app:layout_constraintBottom_toTopOf="@+id/materialCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masyarakat"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:paddingVertical="@dimen/medium_margin"
                android:paddingHorizontal="@dimen/large_margin"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/CardView.TopCorners"
            android:id="@+id/materialCardView"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/zero_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/akunTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/screen_margin">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hintNIK"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="@dimen/screen_margin"
                    android:text="Nomor Induk Kependudukan"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textNIK"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="@dimen/screen_margin"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hintNIK" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hintNama"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="@dimen/screen_margin"
                    android:text="Nama Lengkap"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textNIK" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textNama"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="@dimen/screen_margin"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hintNama" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hintUsername"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="@dimen/screen_margin"
                    android:text="Nama Pengguna"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textNama" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textUsername"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="@dimen/screen_margin"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hintUsername" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hintTelp"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="@dimen/screen_margin"
                    android:text="Nomor Telp"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textUsername" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textTelp"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingBottom="@dimen/screen_margin"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hintTelp" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/screen_margin"
                    app:layout_constraintBottom_toTopOf="@+id/buttonLogout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLogout"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="64dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Keluar"
                    android:textAllCaps="false"
                    android:textColor="@color/error_alert"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/error_alert"
                    app:strokeWidth="1dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>